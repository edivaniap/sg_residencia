<form class="form-horizontal" action="/servidor/residencias/nova" method="POST">
<fieldset>

<!-- Form Name -->
<legend>Adicionar Residência</legend>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="nome">Nome</label>
  <div class="col-md-5">
  <input id="nome" name="nome" type="text" placeholder="Nome para residência" class="form-control input-md" required="">
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="endereco">Endereço</label>
  <div class="col-md-5">
  <input id="endereco" name="endereco" type="text" placeholder="Endereço da residência" class="form-control input-md" required="">
  <span class="help-block">Rua, Número, Bairro, Cidade, UF e CEP</span>
  </div>
</div>

<!-- Button (Double) -->
<div class="form-group">
  <label class="col-md-4 control-label" for="add"></label>
  <div class="col-md-8">
    <button type="submit" id="add" name="add" class="btn btn-success">Adicionar</button>
    <button id="cancel" name="cancel" class="btn btn-danger">Cancelar</button>
  </div>
</div>
</fieldset>
</form>
