{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<form class="form-horizontal" action="/servidor/residentes/adicionar" method="POST">
<fieldset>
<!-- Form Name -->
<legend>Adicionar Residente</legend>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="nome">Nome</label>
  <div class="col-md-5">
  <input id="nome" name="nome" type="text" placeholder="Nome completo do residente" required="" class="form-control input-md">
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="cpf">CPF</label>
  <div class="col-md-5">
  <input id="cpf" name="cpf" type="text" placeholder="CPF do residente" required="" class="form-control input-md">
  </div>
</div>
<br>
<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="matricula">Matrícula</label>
  <div class="col-md-5">
  <input id="matricula" name="matricula" type="text" placeholder="Matrícula do residente" required="" class="form-control input-md">
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="cpf">Curso</label>
  <div class="col-md-5">
  <input id="curso" name="curso" type="text" placeholder="Curso do residente" required="" class="form-control input-md">
  </div>
</div>
<br>
<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="renda">Renda</label>
  <div class="col-md-5">
  <input id="renda" name="renda" type="text" placeholder="Renda do residente" required="" class="form-control input-md">
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="endereco">Endereço</label>
  <div class="col-md-5">
  <input id="endereco" name="endereco" type="text" placeholder="Endereço da residência" class="form-control input-md">
  <span class="help-block">Rua, Número, Bairro, Cidade, UF e CEP</span>
  </div>
</div>
<br>
<!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="residencia">Residência</label>
  <div class="col-md-4">
    <select id="residencia" name="residencia" class="form-control" onchange="recarregarQuartos({{residencias}})">
      {{#each residencias}}
      <option value="{{_id}}">{{nome}}</option>
      {{else}}
      <option value="0">Nenhuma residência resgistrada</option>
      {{/each}}
    </select>
  </div>
</div>

<!-- Multiple Radios -->
<div class="form-group">
  <label class="col-md-4 control-label" for="sexo">Sexo</label>
  <div class="col-md-4">
  <div class="radio">
    <label for="sexo-0">
      <input type="radio" name="sexo" id="sexo-0" value="Feminino" checked="checked">
      Feminino
    </label>
	</div>
  <div class="radio">
    <label for="sexo-1">
      <input type="radio" name="sexo" id="sexo-1" value="Masculino">
      Masculino
    </label>
	</div>
  </div>
</div>
<br>
<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="senha">Senha</label>
  <div class="col-md-5">
  <input id="senha" name="senha" type="password" placeholder="Senha de acesso do residente" required="" class="form-control input-md">
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="confirmacao">Confirmar senha</label>
  <div class="col-md-5">
  <input id="confirmacao" name="confirmacao" type="password" placeholder="Confimação de senha do residente" required="" class="form-control input-md">
  </div>
</div>

<!-- Button (Double) -->
<div class="form-group">
  <label class="col-md-4 control-label" for="add"></label>
  <div class="col-md-8">
    <button type="submit" id="add" name="add" class="btn btn-success">Adicionar</button>
    <a class="btn btn-danger" href="/servidor/residentes">Cancelar</a>
  </div>
</div>
</fieldset>
</form>
